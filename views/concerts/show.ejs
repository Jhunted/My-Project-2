<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="stylesheets/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.css">
    <title><%= title %></title>
</head>
<body>
    <h1 class="has-text-centered title is-1 notification is-black"><%= title %></h1>
    <nav class="has-text-centered title is-4">
    <a href="/">Go Back Home</a>
    --
    <a href="/concerts">Back to all Concerts</a>
    --
    <a href="/concerts/<%= concert.id %>/tickets">Add a Ticket to this Concert</a>
    </nav>
    <div class="has-text-centered">
    <h3 class="title is-2"><%= concert.name %></h3>
    <p class="title is-3"><%= concert.location %></p>
    <p class="title is-4"><%= concert.date %></p>
   
    <h5 class="title is-4">Tickets for this Concert</h5>
    <hr>
    <% tickets.forEach(function(t, idx) { %>
        <div class="box">
        <p class="notification title is-5">Seat: <%= t.seat %></p>
        <p class="notification title is-5">Price: <%= t.price%></p>
    </div>
    </div>
    <% }) %>